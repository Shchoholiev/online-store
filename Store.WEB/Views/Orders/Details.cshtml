@model Store.ViewModels.OrderViewModel

<table class="table">
    <thead>
        <tr>
          <th>//Сart Id</th>
          <th>Image</th>
          <th>//Item Id</th>
          <th>Brand</th>
          <th>Model</th>
          <th>Amount</th>
          <th>Price</th>
       </tr>
    </thead>
    <tbody>
      @foreach (var cart in Model.Items)
      {
          <tr>
              <td>@cart.Id</td>
              <td style="width:100px; height:100px">
                   <img style="height: 100px" src="@cart.Item.Image"/>
              </td>
              <td>@cart.Item.Id</td>
              <td>@cart.Item.Brand</td>
              <td>@cart.Item.Model</td>
              <td>@cart.Amount</td>
              <td>$@cart.Item.Price</td>
          </tr>
      }
    </tbody>
</table>
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="CreationTime" class="control-label"></label>
            <input asp-for="CreationTime" class="form-control" readonly/>
        </div>
        <div class="form-group">
            <label asp-for="DeliveryAddress" class="control-label"></label>
            <input asp-for="DeliveryAddress" class="form-control" readonly/>
        </div>
        <div class="form-group">
            <label asp-for="Details" class="control-label"></label>
            <input asp-for="Details" class="form-control" readonly/>
        </div>
        <div class="text-primary my-2 fs-3 fw-bold">$@Model.TotalPrice</div>
    </div>
</div>
<div class="mt-3">
    <a asp-action="Index">Back to List</a>
</div>