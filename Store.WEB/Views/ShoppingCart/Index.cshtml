@model IEnumerable<Store.ViewModels.CartItemViewModel>

@{
    ViewData["Title"] = "Shopping cart";
}

<h3>Shopping cart</h3>

@{
    await Html.RenderPartialAsync("ShoppingCartPartial", Model);
}

@if (Model.Count() > 0)
{
    <form method="get" asp-controller="Orders" asp-action="MakeOrder">
          <input type="submit" class="btn btn-primary" value="Make Order"/>
    </form>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_MaintainScrollScript");}
}