@using Store.Infrastructure
@model PagedList<Store.ViewModels.Phone.PhoneViewModel>

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<div class="container p-4 card">
    @foreach (var item in Model)
    {
        <form asp-action="EditPartial" asp-route-id="@item.Id" asp-route-PageNumber="@Model.PageNumber" class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-auto">//Id @item.Id</div>
            <div class="col-md-auto mx-2" style="width:100px; height:100px">
                <img style="height: 100px" src="@item.Images.FirstOrDefault().Link"/>
            </div>
            <div class="col-2">
                <a asp-action="Details" asp-route-id="@item.Id">@item.GetFullName()</a>
            </div>
            <div class="col">
                <label asp-for="@item.Amount" class="control-label"></label>
                <input name="amount" asp-for="@item.Amount" class="form-control"/>
                <span asp-validation-for="@item.Amount" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="@item.Price" class="control-label"></label>
                <input name="price" asp-for="@item.Price" class="form-control"/>
                <span asp-validation-for="@item.Price" class="text-danger"></span>
            </div>
            <div class="col">
                <input type="submit" class="btn btn-secondary col" value="Save Changes">
            </div>
            <div class="col-md-auto">
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </div>
        </form>
        <hr />
    }
</div>

@{
    var previousPage = (Model.HasPreviousPage) ? "" : "disabled";
    var previousPageNumber = Model.PageNumber - 1;
    var nextPage = (Model.HasNextPage) ? "" : "disabled";
    var nextPageNumber = Model.PageNumber + 1;
}
<nav class=mt-3>
    <ul class="pagination justify-content-center">
        <li class="page-item @previousPage">
            <a asp-action="EditPanel" asp-route-PageNumber="@previousPageNumber" class="page-link">Previous</a>
        </li>
        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            string linkStatus = (i == Model.PageNumber) ? "active" : "";
            <li class="page-item @linkStatus">
                <a asp-action="EditPanel" asp-route-PageNumber="@i" class="page-link">@i</a>
            </li>
        }
        <li class="page-item @nextPage">
            <a asp-action="EditPanel" asp-route-PageNumber="@nextPageNumber" class="page-link">Next</a>
        </li>
    </ul>
</nav>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        await Html.RenderPartialAsync("_MaintainScrollScript");
    }
}
